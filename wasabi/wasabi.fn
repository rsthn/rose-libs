;; Initiates a multipart upload.
;; @param {string} bucketName: Name of the bucket to create.
;; @param {string} filePath: Relative path of the file to create.
;; @returns {string} The upload ID.
(def-fn wasabi:multipart-initiate bucketName filePath
    (set requestDate (datetime:format (datetime:now) "%a, %d %b %Y %H:%M:%S GMT"))
    (set contentType "text/plain")
    (set signature (wasabi:sign `POST\n\n{contentType}\n{requestDate}\n/{bucketName}/{filePath}?uploads`))

    (request:headers [
        "Content-Type: (contentType)"
        "Date: (requestDate)"
        "Authorization: AWS (local.ACCESS_KEY_ID):(signature)"
    ])

    (when (process-response (request:post "https://s3.wasabisys.com/(bucketName)/(filePath)?uploads" "{}"))
        (throw (local.LAST_ERROR)))

    (set res (xml:parse (request:data)))
    (set res (xml:simplify (res)))

    (res.InitiateMultipartUploadResult.UploadId.0)
)


;; Uploads a part of a multipart upload.
;; @param {string} bucketName: Name of the bucket to create.
;; @param {string} filePath: Relative path of the file to create.
;; @param {string} uploadId: The upload ID.
;; @param { [{partNumber:int, etag:string}] } partsList: List of parts will be populated by this function.
;; @param {string} data: Data to upload.
;; @returns {void}
(def-fn wasabi:multipart-upload bucketName filePath uploadId partsList data
    (set requestDate (datetime:format (datetime:now) "%a, %d %b %Y %H:%M:%S GMT"))
    (set contentType "application/octet-stream")
    (set signature (wasabi:sign `PUT\n\n{contentType}\n{requestDate}\n/{bucketName}/{filePath}?partNumber={+ 1 {partsList.length}}&uploadId={uploadId}`))

    (request:headers [
        "Content-Type: (contentType)"
        "Date: (requestDate)"
        "Authorization: AWS (local.ACCESS_KEY_ID):(signature)"
    ])

    (when (process-response (request:put "https://s3.wasabisys.com/(bucketName)/(filePath)?partNumber=(+ 1 (partsList.length))&uploadId=(uploadId)" (data)))
        (throw (local.LAST_ERROR)))

    (array:push (partsList) (&
        partNumber (+ 1 (partsList.length))
        etag ((request:response-headers).etag)
    ))
)


;; Completes a multipart upload.
;; @param {string} bucketName: Name of the bucket to create.
;; @param {string} filePath: Relative path of the file to create.
;; @param {string} uploadId: The upload ID.
;; @param { [{partNumber:int, etag:string}] } partsList: The list of parts.
;; @returns {void}
(def-fn wasabi:multipart-complete bucketName filePath uploadId partsList
    (set requestDate (datetime:format (datetime:now) "%a, %d %b %Y %H:%M:%S GMT"))
    (set contentType "application/xml")
    (set signature (wasabi:sign `POST\n\n{contentType}\n{requestDate}\n/{bucketName}/{filePath}?uploadId={uploadId}`))

    (request:headers [
        "Content-Type: (contentType)"
        "Date: (requestDate)"
        "Authorization: AWS (local.ACCESS_KEY_ID):(signature)"
    ])

    (set xmlData (concat
        "<CompleteMultipartUpload>"
        (join (map i (partsList)
            "<Part><PartNumber>(i.partNumber)</PartNumber><ETag>(i.etag)</ETag></Part>"
        ))
        "</CompleteMultipartUpload>"
    ))

    (when (process-response (request:post "https://s3.wasabisys.com/(bucketName)/(filePath)?uploadId=(uploadId)" (xmlData)))
        (throw (local.LAST_ERROR)))
)


;; Cancels a multipart upload.
;; @param {string} bucketName: Name of the bucket to create.
;; @param {string} filePath: Relative path of the file to create.
;; @param {string} uploadId: The upload ID.
;; @returns {void}
(def-fn wasabi:multipart-cancel bucketName filePath uploadId
    (set requestDate (datetime:format (datetime:now) "%a, %d %b %Y %H:%M:%S GMT"))
    (set contentType "text/plain")
    (set signature (wasabi:sign `DELETE\n\n{contentType}\n{requestDate}\n/{bucketName}/{filePath}?uploadId={uploadId}`))

    (request:headers [
        "Content-Type: (contentType)"
        "Date: (requestDate)"
        "Authorization: AWS (local.ACCESS_KEY_ID):(signature)"
    ])

    (when (process-response (request:delete "https://s3.wasabisys.com/(bucketName)/(filePath)?uploadId=(uploadId)"))
        (throw (local.LAST_ERROR)))
)
