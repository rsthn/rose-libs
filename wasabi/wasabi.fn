    (set requestDate (datetime:format (datetime:now) "%a, %d %b %Y %H:%M:%S GMT"))
    (set contentType "text/plain")
    (set signature (wasabi:sign `HEAD\n\n{contentType}\n{requestDate}\n/{bucketName}/{filePath}`))

    (request:headers [
        "Content-Type: (contentType)"
        "Date: (requestDate)"
        "Authorization: AWS (local.ACCESS_KEY_ID):(signature)"
    ])

    (request:head "https://s3.wasabisys.com/(bucketName)/(filePath)")
    (eq? 200 (request:status))
)


